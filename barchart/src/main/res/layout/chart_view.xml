<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:bind="http://schemas.android.com/tools">

    <data>

        <variable
                name="maxColumnValue"
                type="int"/>
        <variable
                name="showPercentages"
                type="boolean"/>
    </data>

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
    >

        <include
                android:id="@+id/maxValueLayout"
                layout="@layout/chart_bar"
                bind:label="@{maxColumnValue+``}"/>

        <RelativeLayout
                android:id="@+id/parentLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/maxValueLayout"
                android:background="@color/white">

            <FrameLayout
                    android:id="@+id/xAxisContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/chartRecycler"
                    android:layout_width="match_parent"
                    android:scrollbars="horizontal"
                    android:layout_height="wrap_content"
                    android:paddingStart="@{showPercentages?@dimen/ybar_label_width:0f}"/>
        </RelativeLayout>
    </RelativeLayout>
</layout>